<form action="/contest/vacation-photo/{year}/{month}" method="post" class="form-horizontal" role="form"
      enctype="multipart/form-data">
    <div class="form-group">
        <label for="fieldName" class="col-sm-2 control-label">Name</label>
        <div class="col-sm-4">
            <input type="text" name="name" id="fieldName" class="form-control"/>
        </div>
    </div>
    <div class="form-group">
        <label for="fieldEmail" class="col-sm-2 control-label">Email</label>
        <div class="col-sm-4">
            <input type="email" name="email" id="fieldEmail" class="form-control"/>
        </div>
    </div>
    <div class="form-group">
        <label for="fieldPhoto" class="col-sm-2 control-label">Vacation photo</label>
        <div class="col-sm-4">
            <input type="file" name="photo" id="fieldPhoto" class="form-control" required accept="image/*"/>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-4">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>

    </div>
</form>